<%= form_for @user, url: {action: "create"} do |f| %>
  <ul>
  <% @user.errors.full_messages.each do |error| %>
  <li><%= error %></li>
  <% end %>
  </ul>
  
  <%= f.label :username, :value => "Your name:" %>
  <%= f.text_field :username %><br>
  
  <%= f.label :email %>
  <%= f.text_field :email , :value => "whowhatsit@ask.com"%><br>
  
  <%= f.label :password %>
  <%= f.password_field :password %></br>
  
  <%= f.submit %>
<% end %>